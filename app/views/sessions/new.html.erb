


<div id="loginpage">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-12">

          <img class="mb-4" src="/assets/gratefullogo.png" >
           <h1 class="h3 mb-3 font-weight-normal">Welcome Back!~</h1>
          <%= form_tag("/login" , {:class => "form-signin"}) do %>
            <%= text_field_tag :username , value = nil, class:'form-control' ,  placeholder: 'Type Username here.' , autofocus: true  %>

            <%= password_field_tag :password , value = nil, class:'form-control' ,  placeholder: 'Type Password here.' , autofocus: true %>

            <br>
            <% if flash[:notice] %>
              <div class="btn-danger"><%= flash[:notice] %></div>
            <% end %>
            <br>

            <br><%= submit_tag "Login"  , class:'btn btn-lg btn-dark btn-block'%>



            <p class="mt-5 mb-3 text-muted">&copy;oded with ✨<i class="fas fa-magic"></i>✨ 	<%= link_to " Go Back", root_path  , class: "fas fa-home edit_profile"  , 'data-toggle' => "tooltip" , 'data-placement' => "bottom" , 'title' => "Go back home"%></p>
          <% end %>

      </div>
    </div>
  </div>
</div>
