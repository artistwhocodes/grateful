



<div id="signuppage">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-12">
        <img class="mb-4" src="/assets/gratefullogo.png" >
        <!--- url: "/signup"-->
        <%= form_with model: @user, local: true , :class => 'form-signin' do |f| %>

        <div>
          <%= f.text_field :name , class:'form-control' ,  placeholder: 'Type name here.' , autofocus: true %>
        </div>

        <div>
          <%= f.text_field :username , class:'form-control' ,  placeholder: 'Type name here.' , autofocus: true %>
        </div>
        <br>
        <div>
          <%= f.label :image , "Profile Image", class:'btn btn-dark'%>
          <%= f.file_field :image , class:'form-control' , autofocus: true%>
        </div>
        <br>
        <div>
          <%= f.password_field :password , class:'form-control' ,  placeholder: 'Type password here.' , autofocus: true%>
        </div>
        <div>
          <%= f.password_field :password_confirmation , class:'form-control' ,  placeholder: 'Re-Type password here.' , autofocus: true%>
        </div>


        <div>
          <%= f.submit "Sign Up" , class:'btn btn-lg btn-dark btn-block' %>
        </div>
        <% end %>

        <% if @user && @user.errors.any? %> <!-- check for error and if it is a user. cant call nil on errors -->
          <% @user.errors.full_messages.each do |error|%>
          <p>
            <button type="button" class="btn btn-danger">
            ✨<%= error %>✨
            </button>
          </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
